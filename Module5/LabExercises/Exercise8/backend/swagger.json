{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "My Calculator Project",
    "description": "My User Project Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Calculator",
      "description": "API for Calculus in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/calculate": {
        "get":{
            "tags": ["Calculator"],
            "summary":"Welcome Message",
            "response":{
                "200": {
                    "description":"Welcome text response"
                }
            }
        }
    },
    "/calculate/divide": {
        "get": {
            "tags": ["Divide Service"],
            "summary": ["divide two numbers"],
            "parameters": [
                {"name": "num1", "in": "query", "description": "First Number"},
                {"name": "num2", "in": "query", "description": "Second Number"}
            ],
            "response": {
                "200": {
                    "description": "This service allows you to divide two numbers together"
                }
            }
        }
    },
    "/calculate/multiply": {
        "get": {
            "tags": ["Multiply Service"],
            "summary": ["multiply two numbers"],
            "parameters": [
                {"name": "num1", "in": "query", "description": "First Number"},
                {"name": "num2", "in": "query", "description": "Second Number"}
            ],
            "response": {
                "200": {
                    "description": "This service allows you to multiply two numbers together"
                }
            }
        }
    },
    "/calculate/add": {
        "get": {
            "tags": ["Additional Service"],
            "summary": ["add two numbers"],
            "parameters": [
                {"name": "num1", "in": "query", "description": "First Number"},
                {"name": "num2", "in": "query", "description": "Second Number"}
            ],
            "response": {
                "200": {
                    "description": "This service allows you to add two numbers together"
                }
            }
        }
    },
    "/calculate/substract": {
        "get": {
            "tags": ["Substraction Service"],
            "summary": ["substract two numbers"],
            "parameters": [
                {"name": "num1", "in": "query", "description": "First Number"},
                {"name": "num2", "in": "query", "description": "Second Number"}
            ],
            "response": {
                "200": {
                    "description": "This service allows you to substract two numbers together"
                }
            }
        }
    }
    
  }
}


